<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/borde_lista_programacion">

        <TextView
            android:id="@+id/prog_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="Titulo Programacion"
            android:textColor="#010101"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_Ejecucion"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:minWidth="220dp"
                android:text="Ejecucion : "
                android:textColor="@color/titulos"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/prog_Ejecucion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:minWidth="220dp"
                android:text="Ejecucion"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="0dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_Observacion"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:minWidth="220dp"
                android:text="Observacion : "
                android:textColor="@color/titulos"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/prog_Observacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:maxWidth="220dp"
                android:text="Observacion"
                android:textColor="#939393"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/prog_Horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="1"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:minWidth="50dp"
            android:text="Horario"
            android:textColor="#000000"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prog_id"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
</LinearLayout>